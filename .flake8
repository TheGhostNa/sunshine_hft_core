[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    build,
    dist,
    notebooks,
    freqtrade/data,
    freqtrade/logs
ignore = 
    E203,  # whitespace before ':'
    W503   # line break before binary operator
select = C,E,F,W,B,B950
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    dashboard/dashboard_generator.py:E501
    freqtrade/exchange/common.py:E704
    freqtrade/optimize/hyperopt/hyperopt.py:F401,F841,E302,E305
